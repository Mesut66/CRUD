@model Student
@{
    ViewData["Title"] = "CreateStudent";
}
<h2>Yeni Öğrenci Ekle</h2>
@Html.ActionLink("Show All Students", "AllStudents", "Student", null, new { @class = "btn btn-primary" })
@using (Html.BeginForm("StudentCreated", "Student", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(n => n.TeacherId)
        @Html.DropDownListFor(n => n.TeacherId, new SelectList(ViewBag.Teachers, "Id", "FullName"), "Öğretmen Seç", new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.TeacherId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.FullName)
        @Html.TextBoxFor(n => n.FullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.FullName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.MiddleName)
        @Html.TextBoxFor(n => n.MiddleName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.EmailAddress)
        @Html.TextBoxFor(e => e.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.EmailAddress, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Age)
        @Html.TextBoxFor(a => a.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Age, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Birthday)
        @Html.TextBoxFor(b => b.Birthday, new { @class = "form-control", @type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.GPA)
        @Html.TextBoxFor(g => g.GPA, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.GPA, "", new { @class = "text-danger" })

    </div>
    @Html.ActionLink("Geri", "AllStudents", "Student", null, new { @class = "btn btn-default" })
    <button type="submit" class="btn btn-success">Ekle</button>

}

