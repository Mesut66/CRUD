@model StudentViewModel

@{
    ViewData["Title"] = "DeleteStudent";
}

<h2>Öğrenci Sil</h2>

<div class="text-center">
    <h2 class="text-danger">Öğrenciyi silmek üzeresin @Model.StudentFullName</h2>
    <h3>Emin misin?</h3>
</div>

@Html.ActionLink("Geri", "AllStudents", "Student", null, new { @class = "btn btn-default"})
@Html.ActionLink("Sil!", "StudentDeleted", "Student", new { @id = Model.Id }, new { @class="btn btn-danger"})




